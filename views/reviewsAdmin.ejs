<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Review Management | Supermarket App</title>

    <style>
        body {
            background: #f7f7f7;
        }

        .rating-stars {
            color: gold;
            font-size: 18px;
        }

        .delete-btn {
            padding: 6px 12px;
            background: red;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
        }

        .delete-btn:hover {
            background: darkred;
        }
    </style>

</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            
            <a class="navbar-brand" href="/adminView">Admin Dashboard - Supermarket App</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add New Product</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/adminViewUsers">User Management</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/adminOrders">Order Management</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/adminReviews">Review Management</a>
                    </li>

                    <li class="nav-item ms-2">
                        <a class="nav-link" href="/admin/transactions">Transaction Management</a>
                    </li>

                    <li class="nav-item ms-2">
                        <a class="nav-link" href="/refundReqs">Refund Requests</a>
                    </li>

                </ul>

                <!-- SEARCH -->
                <form class="d-flex me-2" method="get" action="/adminReviews">
                    <input name="search" class="form-control me-2" type="search" placeholder="Search reviewID...">
                    <button class="btn btn-primary">Search</button>
                </form>

                <a href="/adminReviews" class="btn btn-secondary me-2">Reset</a>
                <a href="/logout" class="btn btn-outline-danger"
                    onclick="return confirm('Are you sure you want to logout?')">
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <% if (success && success.length>0) { %>
        <div class="alert alert-success text-center m-0"><%= success %></div>
    <% } %>
    <% if (error && error.length>0) { %>
        <div class="alert alert-danger text-center m-0"><%= error %></div>
    <% } %>

    <!-- PAGE CONTENT -->
    <div class="container mt-4">

        <h1 class="mb-4">All Reviews (Admin)</h1>

        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-striped bg-white">

                <thead class="table-light">
                    <tr>
                        <th>Review ID</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Rating</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (reviews.length === 0) { %>
                        <tr>
                            <td colspan="7" class="text-center py-4">No reviews available.</td>
                        </tr>
                    <% } else { %>

                        <% reviews.forEach(review => { %>
                            <tr>
                                <td><%= review.reviewid %></td>
                                <td><%= review.username || 'Unknown User' %></td>
                                <td><%= review.productName || 'Unknown Product' %></td>

                                <td>
                                    <span class="rating-stars">
                                        <% for (let i = 0; i < review.rating; i++) { %>★<% } %>
                                        <% for (let i = review.rating; i < 5; i++) { %>☆<% } %>
                                    </span>
                                    (<%= review.rating %> / 5)
                                </td>

                                <td><%= review.description || '-' %></td>

                                <td>
                                    <%= review.created_at 
                                        ? new Date(review.created_at).toLocaleString() 
                                        : 'N/A' %>
                                </td>

                                <td>
                                    <a 
                                        href="/deleteReviewAdmin/<%= review.reviewid %>" 
                                        class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this review?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>

                    <% } %>
                </tbody>

            </table>
        </div>

    </div>

</body>
</html>