<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Shopping Cart | Supermarket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f7f7f7; }
        .navbar-brand { font-weight: bold; font-size: 1.4rem; }
        .product-img { height: 100px; object-fit: contain; background: #fff; padding: 5px; }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-white shadow-sm px-4 mb-4">
        <a class="navbar-brand" href="/">ðŸ›’ Supermarket</a>
        <a href="/" class="btn btn-outline-primary ms-auto">Continue Shopping</a>
    </nav>

    <div class="container">
        <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <h2 class="text-center mb-4">Your Cart</h2>

        <% if (cartItems.length === 0) { %>
            <p class="text-center text-muted">Your cart is empty.</p>
        <% } else { %>
            <form action="/cartupdate" method="POST">
                <% let totalCost = 0; %>
                <% cartItems.forEach(item => { 
                    const itemTotal = item.quantity * item.price;
                    totalCost += itemTotal;
                %>
                <div class="card mb-3 shadow-sm p-3 d-flex flex-row align-items-center">
                    <img src="/images/<%= item.image || 'placeholder.png' %>" 
                        class="product-img me-3" alt="<%= item.productName %>">
                    <div class="flex-grow-1">
                        <h5><%= item.productName %></h5>
                        <p>Price: SGD <%= item.price.toFixed(2) %></p>
                        <p>Available: <%= item.availableQuantity %></p>
                        <div class="d-flex align-items-center">
                            <input type="number" name="<%= item.productId %>" 
                                class="form-control me-2" 
                                min="1" max="<%= item.availableQuantity %>" 
                                value="<%= item.quantity %>" style="width: 80px;">
                            <span>Subtotal: SGD <%= itemTotal.toFixed(2) %></span>
                        </div>
                    </div>
                    <div>
                        <a href="/cartdelete/<%= item.productId %>" class="btn btn-danger ms-3">Delete</a>
                    </div>
                </div>
                <% }) %>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <h4>Total: SGD <%= totalCost.toFixed(2) %></h4>
                    <div>
                        <button type="submit" class="btn btn-success me-2">Confirm Quantities</button>
                        <a href="/checkout" class="btn btn-primary">Checkout</a>
                    </div>
                </div>
            </form>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
