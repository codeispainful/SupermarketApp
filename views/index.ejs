<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">

        <a class="navbar-brand" href="/adminView">Admin Dashboard - Supermarket App</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="/addProduct">Add new product</a>
                </li>

                <li class="nav-item ms-2">
                    <a class="nav-link" href="/adminViewUsers">User Management</a>
                </li>

                <li class="nav-item ms-2">
                    <a class="nav-link" href="/adminOrders">Order Management</a>
                </li>

                <li class="nav-item ms-2">
                    <a class="nav-link" href="/adminReviews">Review Management</a>
                </li>

                <li class="nav-item ms-2">
                    <a class="nav-link" href="/admin/transactions">Transaction Management</a>
                </li>

                <li class="nav-item ms-2">
                    <a class="nav-link" href="/refundReqs">Refund Requests</a>
                </li>
            </ul>
        </div>

        <!-- Search Form -->
        <form class="d-flex" method="get" action="/adminView">
            <input name="search" class="form-control me-2" type="search" placeholder="Search products...">
            <button class="btn btn-primary">Search</button>
        </form>

        <a href="/adminView" class="btn btn-secondary ms-2">Reset</a>

        <a href="/logout" class="btn btn-outline-danger ms-2"
            onclick="return confirm('Are you sure you want to logout?')">
            Logout
        </a>

    </div>
</nav>
    <% if (success && success.length>0) { %>
        <div class="alert alert-success text-center m-0"><%= success %></div>
    <% } %>
    <% if (error && error.length>0) { %>
        <div class="alert alert-danger text-center m-0"><%= error %></div>
    <% } %>

        <div class="container">
          <br>
          <div class="text-center">
            <h2>Products from Supermarket App Database</h2>
          </div>
          <br>

          <table class="table table-hover small text-center">
            <thead>
              <tr>
                <th width="50">Product Id</th>
                <th width="100">Product Name</th>
                <th width="100">Product Image</th>
                <th width="50">Quantity</th>
                <th width="50">Price</th>
                <th width="50">Hidden</th>
                <th width='50'>Category</th>
                <th width='50'>Edit</th>
                <th width='50'>Hide</th>
                <th width='50'>Unhide</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < products.length; i++) { %>
                <tr>
                  <td><%= products[i].productId %></td>
                  <td><a href="/product/<%= products[i].productId %>">
                      <%= products[i].productName %>
                    </a></td> <!--<a href="/product/... allows the handler to grab the id-->
                  <td><img src="images/<%= products[i].image%>" width="20%"></td>
                  <td>
                    <% if (products[i].quantity < 30) { %>
                      <span class="badge bg-danger">
                        <%= products[i].quantity %>
                      </span>
                      <% } else if (products[i].quantity < 200) { %>
                        <span class="badge bg-warning text-dark">
                          <%= products[i].quantity %>
                        </span>
                      <% } else { %>
                        <span class="badge bg-success">
                          <%= products[i].quantity %>
                        </span>
                      <% } %>
                  </td>
                  <td>
                    <%= products[i].price.toFixed(2) %>
                  </td>
                  <td>
                    <%= products[i].hidden==1 ? 'Yes' : 'No' %>
                  </td>
                  <td>
                    <%= products[i].category %>
                  </td>
                  <td><a href="/editProduct/<%= products[i].productId %>">Edit</a></td>
                  <td><a href="/deleteProduct/<%= products[i].productId %>"
                      onclick="return confirm('Are you sure you want to hide this product?')">Hide</a></td>
                  <td><a href="/unhideProduct/<%= products[i].productId %>"
                      onclick="return confirm('Are you sure you want to unhide this product?')">Unhide</a></td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
</body>

</html>