<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
  <%- include('partials/adminnavbar') %>
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
  <% } %>
  <div class="container">
    <br>
    <div class="text-center"><h2>Products from Supermarket App Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Product Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width='50'>Category</th>
            <th width='50'>Edit</th>
            <th width='50'>Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td><a href="/product/<%= products[i].productId %>"><%= products[i].productName %></a></td> <!--<a href="/product/... allows the handler to grab the id-->
            <td><img src="images/<%= products[i].image%>" width="20%"></td>
            <td><%= products[i].quantity %></td>
            <td><%= products[i].price.toFixed(2) %></td>
            <td><%= products[i].category %></td>
            <td><a href="/editProduct/<%= products[i].productId %>">Edit</a></td>
            <td><a href="/deleteProduct/<%= products[i].productId %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
