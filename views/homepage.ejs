<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Supermarket | Products</title>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f7f7f7;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }

        .product-card {
            transition: transform .15s ease-in-out;
        }

        .product-card:hover {
            transform: scale(1.02);
        }

        .product-img {
            height: 180px;
            object-fit: contain;
            background: #fff;
            padding: 10px;
        }

        .category-badge {
            font-size: 0.75rem;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-light bg-white shadow-sm px-4">
        <a class="navbar-brand" href="/">ðŸ›’ Supermarket</a>

        <form class="d-flex" method="get" action="/">
            <input name="search" class="form-control me-2" type="search" placeholder="Search products...">
            <button class="btn btn-primary">Search</button>

            <a href="/" class="btn btn-secondary ms-2">Reset</a>
        </form>
        <div class="ms-auto d-flex">
            <a href="/viewcart" class="btn btn-outline-success me-2">ðŸ›’ Cart</a>
            <a href="/logout" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to logout?')">Logout</a>
        </div>
    </nav>
    <% if (success && success.length> 0) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
        <% } %>
            <% if (error && error.length> 0) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                    <div class="container mt-4">
                        <h2 class="text-center mb-4">Available Products</h2>
                        <div class="row g-4">
                            <% if (products.length===0) { %>
                                <p class="text-center text-muted">No products found.</p>
                                <% } %>
                                    <% products.forEach(product=> {
                                        const inCart = product.cartQuantity || 0;
                                        %>
                                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                                            <div
                                                class="card product-card shadow-sm <%= product.quantity === 0 ? 'opacity-50' : '' %>">
                                                <img src="/images/<%= product.image || 'placeholder.png' %>"
                                                    class="card-img-top product-img" alt="<%= product.productName %>">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title">
                                                        <%= product.productName %>
                                                    </h5>
                                                    <span class="badge bg-secondary category-badge">
                                                        <%= product.category || "Uncategorized" %>
                                                    </span>
                                                    <p class="mt-2 mb-1 fw-bold">QTY: <%= product.quantity %>
                                                    </p>
                                                    <p class="mt-2 mb-1 fw-bold">SGD <%= product.price.toFixed(2) %>
                                                    </p>
                                                    <% if (product.quantity===0) { %>
                                                        <!-- OUT OF STOCK MODE -->
                                                        <span class="badge bg-danger w-100 py-2">OUT OF STOCK</span>
                                                        <% } else { %>
                                                            <!-- NORMAL MODE -->
                                                            <form action="/addtocart/<%= product.productId %>"
                                                                method="POST">
                                                                <input type="number" name="quantity"
                                                                    class="form-control mb-2" min="1"
                                                                    max="<%= product.quantity %>" value="1">
                                                                <button type="submit"
                                                                    class="btn btn-<%= inCart > 0 ? 'warning' : 'success' %> w-100">
                                                                    <%= inCart> 0 ? 'Update Cart' : 'Add to Cart' %>
                                                                </button>
                                                            </form>
                                                            <% } %>
                                                </div>
                                            </div>
                                        </div>
                            <% }) %>
                        </div>
                    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>