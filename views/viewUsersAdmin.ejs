<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>User Management | Supermarket App</title>
</head>

<body>

    <!-- Admin Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
    
            <a class="navbar-brand" href="/adminView">Admin Dashboard - Supermarket App</a>
    
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
    
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add new product</a>
                    </li>
    
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="/adminViewUsers">User Management</a>
                    </li>
    
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="/adminOrders">Order Management</a>
                    </li>
    
                </ul>
            </div>
    
            <!-- Search Form -->
            <form class="d-flex" method="get" action="/adminViewUsers">
                <input name="search" class="form-control me-2" type="search" placeholder="Search users...">
                <button class="btn btn-primary">Search</button>
            </form>
    
            <a href="/adminViewUsers" class="btn btn-secondary ms-2">Reset</a>
    
            <a href="/logout" class="btn btn-outline-danger ms-2"
                onclick="return confirm('Are you sure you want to logout?')">
                Logout
            </a>
    
        </div>
    </nav>

        <!-- Flash Messages -->
        <% if (success && success.length> 0) { %>
            <div class="alert alert-success text-center">
                <%= success %>
            </div>
            <% } %>

                <% if (error && error.length> 0) { %>
                    <div class="alert alert-danger text-center">
                        <%= error %>
                    </div>
                    <% } %>

                        <div class="container mt-4">
                            <div class="text-center mb-4">
                                <h2>All Users in Supermarket App Database</h2>
                            </div>

                            <table class="table table-hover table-sm text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th>User ID</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Role</th>
                                        <th>Banned</th>
                                        <th>Edit</th>
                                        <th>Ban</th>
                                        <th>Unban</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user=> { %>
                                        <tr>
                                            <td>
                                                <%= user.userid %>
                                            </td>
                                            <td>
                                                <%= user.username %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <%= user.contact %>
                                            </td>
                                            <td>
                                                <%= user.role %>
                                            </td>
                                            <td>
                                                <%= user.banned==1 ? 'Yes' : 'No' %>
                                            </td>
                                            <td>
                                                <a href="/editUser/<%= user.userid %>"
                                                    class="btn btn-sm btn-primary">Edit</a>
                                            </td>
                                            <td>
                                                <a href="/banUser/<%= user.userid %>" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to ban this user?')">
                                                    Ban
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/unbanUser/<%= user.userid %>" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Are you sure you want to unban this user?')">
                                                    Unban
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>

</body>

</html>