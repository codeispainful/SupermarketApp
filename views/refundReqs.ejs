<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Refund Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('partials/adminnavbar') %>
<div class="container mt-4">
    <h3>Pending Refund Requests</h3>
    <% if (!refunds || refunds.length === 0) { %>
        <p>No pending refund requests.</p>
    <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Transaction ID</th>
                    <th>User ID</th>
                    <th>Reason</th>
                    <th>Image</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% refunds.forEach(r => { %>
                    <tr>
                        <td><%= r.id %></td>
                        <td><%= r.transaction_id %></td>
                        <td><%= r.userId %></td>
                        <td><%= r.reason %></td>
                        <td><% if (r.image) { %><a href="/images/<%= r.image %>">View</a><% }else{ %>No Image Submitted<%}%></td>
                        <td><%= r.created_at %></td>
                        <td>
                            <form method="post" action="/api/admin/refunds/<%= r.transaction_id %>/approve" onsubmit="return confirm('Approve refund <%= r.id %>?')">
                                <button class="btn btn-sm btn-primary">Approve</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>
</body>
</html>
