<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile | Supermarket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f5f7fa;
        }
        .profile-container {
            max-width: 700px;
            margin: auto;
            margin-top: 40px;
        }
        .profile-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        }
        .profile-header {
            text-align: center;
            margin-bottom: 25px;
        }
        .profile-header h2 {
            font-weight: bold;
            color: #2c7a7b;
        }
        .info-label {
            font-weight: 600;
            color: #495057;
        }
        .info-value {
            color: #2d3748;
        }
        .form-control {
            border-radius: 8px;
        }
        .btn-save {
            background-color: #0d6efd;
            color: white;
        }
        .btn-save:hover {
            background-color: #0b5ed7;
        }
        .password-toggle {
            background: #6c757d;
            color: white;
        }
        .password-toggle:hover {
            background: #5a6268;
        }
        .alert {
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success text-center m-0">
            <%= success %>
        </div>
    <% } %>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger text-center m-0">
            <%= error %>
        </div>
    <% } %>

    <!-- Navbar -->
    <%- include('partials/profilenavbar') %>

    <div class="profile-container">

        <div class="profile-card">

            <div class="profile-header">
                <h2>Edit Profile</h2>
                <p class="text-muted">Update your account information</p>
            </div>

            <form action="/editprofile" method="POST">

                <div class="mb-3">
                    <label class="info-label">Username: <%= user.username %></label>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="info-label" for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" required>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label class="info-label" for="contact">Phone Number:</label>
                    <input type="text" id="contact" name="contact" class="form-control" value="<%= user.contact %>" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="info-label" for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" value="<%= user.password %>" required>
                    <button type="button" class="btn btn-sm password-toggle mt-2" onclick="togglePassword()">Show Password</button>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-save px-4">Save Changes</button>
                </div>

            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const btn = event.target;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                btn.textContent = "Hide Password";
            } else {
                passwordInput.type = 'password';
                btn.textContent = "Show Password";
            }
        }
    </script>

</body>
</html>